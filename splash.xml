<?xml version="1.0"?>
<recovery>
	<details>
		<resolution width="1520" height="2160"/>
		<author>esheep</author>
		<title>TWRP Materialised Stock Splash</title>
		<description>splash screen</description>
		<themeversion>3</themeversion>
	</details>

	<resources>
		<font name="splash" filename="Light.ttf" size="47"/>
		<image name="splashlogo" filename="splashlogo_stock" retainaspect="1"/>
		<image name="splashteamwin" filename="splashteamwin_stock" retainaspect="1"/>
	</resources>

	<variables>
		<variable name="screen_w" value="1520"/>
		<variable name="background" value="#222222FF"/>
		<variable name="header_color" value="#777777FF"/>
		<variable name="accent_install" value="#039BE5FF"/>
		<variable name="accent_wipe" value="#ED3B3BFF"/>
		<variable name="accent_backup" value="#0F9D58FF"/>
		<variable name="accent_restore" value="#EF6C00FF"/>
		<variable name="accent_reboot" value="#009688FF"/>
	</variables>

	<pages>
		<page name="splash">
			<background color="%background%"/>

			<fill color="%header_color%">
				<placement x="220" y="0" w="%screen_w%" h="456"/>
			</fill>

			<fill color="%accent_install%">
				<placement x="220" y="0" w="216" h="456"/>
			</fill>

			<fill color="%accent_wipe%">
				<placement x="436" y="0" w="216" h="456"/>
			</fill>

			<fill color="%accent_backup%">
				<placement x="652" y="0" w="216" h="456"/>
			</fill>

			<fill color="%accent_restore%">
				<placement x="868" y="0" w="216" h="456"/>
			</fill>

			<fill color="%accent_reboot%">
				<placement x="1084" y="0" w="216" h="456"/>
			</fill>

			<fill color="%background%">
				<placement x="682" y="420" w="64" h="50"/>
			</fill>

			<fill color="%accent_backup%">
				<placement x="774" y="452" w="64" h="50"/>
			</fill>

			<image>
				<image resource="splashlogo"/>
				<placement x="760" y="456" placement="4"/>
			</image>

			<image>
				<image resource="splashteamwin"/>
				<placement x="760" y="1780" placement="4"/>
			</image>

			<text color="%header_color%">
				<font resource="splash"/>
				<placement x="760" y="1830" placement="5"/>
				<text>Recovery Project %tw_version%</text>
			</text>
		</page>
	</pages>
</recovery>

